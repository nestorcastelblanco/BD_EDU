<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.bd_edu.controllers.ProgramarExamenController"
            prefWidth="600.0" prefHeight="400.0">

    <VBox spacing="15"
          AnchorPane.topAnchor="10"
          AnchorPane.leftAnchor="10"
          AnchorPane.rightAnchor="10"
          AnchorPane.bottomAnchor="10">

        <Label text="Programar Examen"
               style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

        <HBox spacing="10" alignment="CENTER_LEFT">
            <Label text="Examen:"/>
            <ComboBox fx:id="examenCombo" promptText="Seleccione examen"/>
        </HBox>

        <HBox spacing="10" alignment="CENTER_LEFT">
            <Label text="Fecha:"/>
            <DatePicker fx:id="fechaPicker"/>
        </HBox>

        <HBox spacing="10" alignment="CENTER_LEFT">
            <Label text="Hora:"/>
            <Spinner fx:id="horaSpinner" prefWidth="80"/>
            <Label text=":"/>
            <Spinner fx:id="minutoSpinner" prefWidth="80"/>
        </HBox>

        <Button fx:id="programarButton"
                text="Programar Examen"
                onAction="#programarExamen"
                maxWidth="Infinity"/>

        <Button fx:id="volverButton" text="Regresar" onAction="#volver"/>
    </VBox>
</AnchorPane>
