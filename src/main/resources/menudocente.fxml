<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.bd_edu.controllers.MenuDocenteController"
            prefHeight="400.0" prefWidth="600.0">

    <!-- Contenedor principal con margen interno indicado vía anclajes -->
    <VBox spacing="20"
          AnchorPane.topAnchor="10"
          AnchorPane.leftAnchor="10"
          AnchorPane.rightAnchor="10"
          AnchorPane.bottomAnchor="10">

        <Label text="Menú Docente"
               style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

        <Button fx:id="crearExamenButton"
                text="Crear Examen"
                onAction="#crearExamen"/>

        <Button fx:id="agregarPreguntaButton"
                text="Agregar Pregunta"
                onAction="#agregarPregunta"/>

        <Button fx:id="verEstadisticasButton"
                text="Ver Estadísticas"
                onAction="#verEstadisticas"/>

        <Button fx:id="configurarExamenButton"
                text="Configurar Examen"
                onAction="#configurarExamen"/>

        <Button fx:id="volverButton" text="Salir" onAction="#volver"/>
    </VBox>
</AnchorPane>
