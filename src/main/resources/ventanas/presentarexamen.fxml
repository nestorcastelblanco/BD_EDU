<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.bd_edu.controllers.PresentarExamenController"
            prefHeight="600.0" prefWidth="800.0"
            stylesheets="@../estilos.css">

    <VBox spacing="20"
          AnchorPane.topAnchor="10"
          AnchorPane.leftAnchor="10"
          AnchorPane.rightAnchor="10"
          AnchorPane.bottomAnchor="10">

        <Label text="Presentar Examen"
               styleClass="label-titulo"/>

        <!-- Temporizador -->
        <Label fx:id="tiempoLabel"
               styleClass="label-temporizador"/>

        <!-- Preguntas (esto se llena dinámicamente) -->
        <VBox fx:id="preguntasVBox"
              spacing="15"
              styleClass="preguntas-contenedor">
            <!-- Aquí se añadirían las preguntas dinámicamente -->
            <Label text="Pregunta 1: ¿Cuál es la capital de Colombia?" styleClass="label-pregunta"/>
            <TextField promptText="Tu respuesta..." styleClass="campo-respuesta"/>
            <Label text="Pregunta 2: ¿Quién escribió 'Cien años de soledad'?" styleClass="label-pregunta"/>
            <TextField promptText="Tu respuesta..." styleClass="campo-respuesta"/>
        </VBox>

        <Button fx:id="finalizarExamenButton"
                text="Finalizar Examen"
                onAction="#finalizarExamen"
                styleClass="button-accion"/>

        <Button fx:id="volverButton"
                text="Regresar"
                onAction="#volver"
                styleClass="boton-regresar"/>
    </VBox>
</AnchorPane>
