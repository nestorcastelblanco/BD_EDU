<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.bd_edu.controllers.PreguntaSeleccionMultiple"
            prefWidth="600" prefHeight="500">

    <children>
        <VBox alignment="TOP_CENTER" spacing="10" layoutX="50" layoutY="20" prefWidth="500">
            <children>

                <Label text="Registrar Pregunta de Selección Múltiple" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

                <Label text="Enunciado:" />
                <TextField fx:id="enunciadoField" promptText="Ingrese el enunciado de la pregunta" maxWidth="400"/>

                <Label text="Opciones (marque las correctas):" />

                <VBox spacing="10">
                    <!-- Opciones con TextFields + CheckBoxes -->
                    <HBox spacing="10" alignment="CENTER_LEFT">
                        <CheckBox fx:id="opcion1" text="Opción 1" />
                        <TextField fx:id="opcionField1" promptText="Escriba opción 1"/>
                    </HBox>

                    <HBox spacing="10" alignment="CENTER_LEFT">
                        <CheckBox fx:id="opcion2" text="Opción 2" />
                        <TextField fx:id="opcionField2" promptText="Escriba opción 2"/>
                    </HBox>

                    <HBox spacing="10" alignment="CENTER_LEFT">
                        <CheckBox fx:id="opcion3" text="Opción 3" />
                        <TextField fx:id="opcionField3" promptText="Escriba opción 3"/>
                    </HBox>

                    <HBox spacing="10" alignment="CENTER_LEFT">
                        <CheckBox fx:id="opcion4" text="Opción 4" />
                        <TextField fx:id="opcionField4" promptText="Escriba opción 4"/>
                    </HBox>
                </VBox>

                <HBox spacing="10" alignment="CENTER_LEFT">
                    <children>
                        <Label text="Estado:"/>
                        <ComboBox fx:id="comboEstado" promptText="Seleccione estado" prefWidth="150"/>
                        <Label text="Tema:"/>
                        <ComboBox fx:id="comboTema" promptText="Seleccione tema" prefWidth="150"/>
                    </children>
                </HBox>

                <HBox spacing="10" alignment="CENTER_LEFT">
                    <children>
                        <Label text="Porcentaje:"/>
                        <TextField fx:id="porcentajeField" promptText="Ingrese porcentaje" prefWidth="100"/>
                        <Label text="Tiempo (segundos):"/>
                        <TextField fx:id="tiempoField" promptText="Tiempo" prefWidth="100"/>
                    </children>
                </HBox>

                <HBox spacing="20" alignment="CENTER">
                    <children>
                        <Button fx:id="guardarButton" text="Guardar Pregunta" onAction="#guardarPregunta"/>
                        <Button fx:id="volverButton" text="Volver" onAction="#volver"/>
                    </children>
                </HBox>

            </children>
            <padding><Insets top="10" right="20" bottom="10" left="20"/></padding>
        </VBox>
    </children>
</AnchorPane>
