<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.bd_edu.controllers.MenuDocenteController"
            prefHeight="600.0" prefWidth="800.0"
            stylesheets="@../estilos.css"
            styleClass="anchor-pane">

    <VBox alignment="CENTER" spacing="20"
          AnchorPane.topAnchor="100.0"
          AnchorPane.leftAnchor="100.0"
          AnchorPane.rightAnchor="100.0"
          AnchorPane.bottomAnchor="100.0">

        <VBox spacing="20" alignment="CENTER" styleClass="login-box">
            <Label text="Menú Docente" styleClass="label-titulo"/>

            <!-- Botones en dos filas -->
            <HBox spacing="20" alignment="CENTER">
                <Button fx:id="crearExamenButton" text="Crear Examen" onAction="#crearExamen" styleClass="button" maxWidth="200" minWidth="200"/>
                <Button fx:id="agregarPreguntaButton" text="Agregar Pregunta" onAction="#agregarPregunta" styleClass="button" maxWidth="200" minWidth="200"/>
            </HBox>

            <HBox spacing="20" alignment="CENTER">
                <Button fx:id="verEstadisticasButton" text="Ver Estadísticas" onAction="#verEstadisticas" styleClass="button" maxWidth="200" minWidth="200"/>
                <Button fx:id="configurarExamenButton" text="Configurar Examen" onAction="#configurarExamen" styleClass="button" maxWidth="200" minWidth="200"/>
            </HBox>

            <Button fx:id="volverButton" text="Salir" onAction="#volver" styleClass="boton-regresar" maxWidth="200" minWidth="200"/>
        </VBox>

    </VBox>
</AnchorPane>
